<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ninja.android.prevail.example.ui.activity.PrevailActivity"
                tools:ignore="MergeRootFrame">

    <fragment android:name="ninja.android.prevail.example.ui.fragment.SettingsFragment"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:id="@+id/settings"/>

    <fragment android:name="ninja.android.prevail.example.ui.fragment.TodoListFragment"
                android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@+id/settings"
              android:id="@+id/todo"/>
</RelativeLayout>

